{% extends 'base.html.twig' %}

{% block content %}
    <h1>{{ post.heading }}</h1>
    <hr>
    <div>Created at: {{ post.createdAt|date }}</div>
    <ul class="list-inline">
        {% for tag in post.tags %}
            <li>
                <span>{{ tag.name }}</span>
                <span class="badge">{{ tag.posts|length }}</span>
            </li>
        {% endfor %}
    </ul>
    <hr>
    <div>{{ post.content }}</div>
{% endblock %}
